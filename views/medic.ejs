<%- include('partials/_header') %>
<%- include('partials/_nav') %>
<div class="container">
    <div class="row">
        <!--Form-->
        <div class="col-md-5">
            <div class="card">
                <div class="card-body">

                    <blockquote class="blockquote text-center">
                        <p class="mb-0">Buscar Paciente</p>
                    </blockquote>

                    <table class = "table table-bordered table-hover">
                        <tbody>
                                <tr>
                                    <form action="/medic/id" method="POST">
                                        <td>
                                            <div class="form-group">
                                                <input type="text" name = "id" placeholder="ID" class = "form-control" autocomplete="off">
                                            </div>
                                        </td>
                                        <td class="text-center">
                                            <button type="submit" class="btn btn-primary">Buscar</button>
                                        </td>
                                    </form>
                                </tr>
        
                                <tr>
                                    <form action="/medic/dni" method="POST">
                                        <td>
                                            <div class="form-group">
                                                <input type="number" name = "dni" placeholder="Cedula" class = "form-control" autocomplete="off">
                                            </div>
                                        </td>
                                        <td class="text-center">
                                            <button type="submit" class="btn btn-primary">Buscar</button>
                                        </td>
                                    </form>
                                </tr>
                        </tbody>
                    </table>
                </div>

                <table class = "table table-bordered table-hover">

                    <tbody>
                        <tr>
                            <th>
                                <a href="/medic/clean" class = "btn btn-danger btn-block">Limpiar</a>
                            </th>
                        </tr>
                    </tbody>
                </table>

                <table class = "table table-bordered table-hover">
                    <thead>
                        <tr>

                            <th class="text-center">
                                ID
                            </th>

                            <th class="text-center">
                                Nombre
                            </th>

                            <th class="text-center">
                                Cedula
                            </th>

                            <th class="text-center">
                                PSR
                            </th>
                        </tr>
                    </thead>

                    <tbody>
                    <!-- Loop through object from router
                    <% for(var i = 0; i < object.length; i++){ %>
                        <tr>
                            <td class="text-center"><%= object[i].id %></td>
                            <td class="text-center"><%= object[i].name %></td>
                            <td class="text-center"><%= object[i].dni %></td>
                            <td class="text-center"><%= object[i].psr %></td>
                        </tr>
                    <% } %>-->
                    </tbody>
                </table>

            </div>
        </div>
        <!--Use your API key Here-->
        <script
            src="https://maps.googleapis.com/maps/api/js?key=YOUR-API-KEY-HERE&language=en&callback=initMap&libraries=&v=weekly"
            defer
        ></script>

        <script> 
            //Get object from router
            //let data = <%-JSON.stringify(object)%>;
            function initMap() {
                let options = {
                    zoom: 11,
                    center: { lat: 10.96854, lng: -74.78132 },
                    disableDefaultUI: true,
                    disableDoubleClickZoom: true,
                    fullscreenControl: false,
                    draggable: true,
                    mapTypeControl: true,
                    mapTypeControlOptions: {style: google.maps.MapTypeControlStyle.DROPDOWN_MENU},
                    navigationControl: true,
                    mapTypeId: google.maps.MapTypeId.ROADMAP
                }
                let map = new google.maps.Map(document.getElementById("map"), options);
            }

            </script>
            <style>
                #map{
                   width: 100%;
                   height: 500px;
                }
            </style>

           <div class="col-md-7">
               <div class="card">
                   <div class="card-body">
                       <div id = "map"></div>
                   </div>
               </div>
           </div>
    </div>
</div>
<%- include('partials/_footer') %>